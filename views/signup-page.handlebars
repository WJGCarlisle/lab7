<body class="signup-page">
  <div class="wrapper">
    <div class="header header-filter" style="background-image: url('/img/background.jpg'); background-size: cover; background-position: center;">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="card card-signup">

              {{#if viewAlt}}
              <form class="form" role="form" method="get" action="/signedupB">
              {{else}}
              <form class="form" role="form" method="get" action="/signedup">
              {{/if}}

                <div class="header header-info text-center">
                  <h4>Sign Up</h4>
                </div>
                <div class="content">

                  <div class="input-group">
                    <span class="input-group-addon">
											<i class="material-icons">face</i>
										</span>
                    <input type="text" class="form-control" name="name" placeholder="First and Last Name..." required/>
                  </div>

                  <div class="input-group">
                    <span class="input-group-addon">
											<i class="material-icons">account_circle</i>
										</span>
                    <input type="text" id="SUusername" class="form-control" name="username" placeholder="Username..." required/>
                  </div>

                  <div class="input-group">
                    <span class="input-group-addon">
											<i class="material-icons">lock_outline</i>
										</span>
                    <input type="password" id="SUpassword" placeholder="Password..." name="password" class="form-control" required/>
                  </div>

                {{#if viewAlt}}
                </div>
                <div class="footer text-center">
                  <input type="submit" id="GetStartedB" value = "Get Started" class="btn btn-simple btn-primary btn-lg">
                  <p class="text-muted">Already have an account?</p>
                  <a href = "/viewAlt" class="btn btn-primary btn-simple">Sign In</a>
                </div>

                {{else}}
                </div>
                <div class="footer text-center">
                  <input type="submit" id="GetStarted" value = "Get Started" class="btn btn-simple btn-primary btn-lg">
                  <p class="text-muted">Already have an account?</p>
                  <a href = "/" class="btn btn-primary btn-simple">Sign In</a>
                </div>

                {{/if}}

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div>


</body>
